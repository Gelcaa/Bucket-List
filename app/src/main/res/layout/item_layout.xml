<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="2dp"
    app:cardCornerRadius="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/image_view_display"
                android:layout_width="110dp"
                android:layout_height="80dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_view_item_container"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/card_view_item_container"
            android:fontFamily="sans-serif-medium"
            android:text="Main"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_main"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/card_view_item_container"
            android:fontFamily="sans-serif-light"
            android:text="description"

            android:textColor="#888888"
            android:textSize="14sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>



